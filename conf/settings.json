{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(wc:*)",
      "Bash(sha256sum:*)",
      "Bash(act -l:*)",
      "WebFetch"
    ],
    "deny": [
      "Bash(git rm -r:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git rm -f:*)",
      "Bash(git switch:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git reset:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "Bash(git merge:*)",
      "Bash(git switch:*)",
      "Bash(git rebase:*)",
      "Bash(systemctl:*)",
      "Bash(bash:*)",
      "Bash(zsh:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(py:*)",
      "Bash(pip:*)",
      "Bash(pip3:*)",
      "Bash(pytest:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(gem:*)",
      "Bash(bundle:*)",
      "Bash(go run:*)",
      "Bash(java:*)",
      "Bash(mvn:*)",
      "Bash(dd:*)",
      "Bash(systemctl:*)",
      "Bash(systemd:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(halt:*)",
      "Bash(fdisk:*)",
      "Bash(mount:*)",
      "Bash(umount:*)",
      "Bash(rm -rf:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "Bash(passwd:*)",
      "Bash(useradd:*)",
      "Bash(usermod:*)",
      "Bash(docker:*)",
      "Bash(kubectl:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(bash:*)",
      "Bash(journalctl:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(cd:*)",
      "Bash(cargo publish:*)",
      "Bash(rm -f:*)",
      "Bash(rm -r:*)",
      "Bash(rm /:*)",
      "Bash(cat <<:*)",
      "Bash(cat >:*)",
      "Bash(cat:*)",
      "Bash(/usr/bin/python3:*)",
      "Bash(git stash:*)",
      "Bash(gpg:*)"
    ],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/user/.claude/hooks/PreToolUse.sh"
          }
        ]
      }
    ]
  },
  "disableAllHooks": false,
  "sandbox": {
    "allowUnsandboxedCommands": false
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
